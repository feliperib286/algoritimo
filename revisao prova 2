    nro = Math.floor(nro);
    if( nro%2 == 0 ){
        console.log(nro);
        i = i + 1;
    }
}


// Exercício 7
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( nro%3 == 0 || nro%5 == 0 ){
        console.log(nro);
        i = i + 1;
    }
}


// Exercício 8
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( (nro%3 == 0 || nro%5 == 0) && nro > 20 ){
        console.log(nro);
        i = i + 1;
    }
}

// Exercício 9
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( nro < 20 || nro > 80 ){
        console.log(nro);
        i = i + 1;
    }
}


// Exercício 10
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( nro < 50 && nro%2 == 1 ){
        console.log(nro);
        i = i + 1;
    } else if( nro >= 50 && nro%2 == 0 ){
        console.log(nro);
        i = i + 1;
    }
}
// ***************************************
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( (nro < 50 && nro%2 == 1) || ( nro >= 50 && nro%2 == 0 ) ){
        console.log(nro);
        i = i + 1;
    }
}
