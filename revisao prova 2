console.log( soma );


// Exercício 2
let entrada = prompt("Entre com a idade:");
entrada = parseInt(entrada);
if( entrada < 18 ){
 console.log("de menor");
}
else{
 console.log("de maior");
}


// Exercício 3
let i = 0;
while( i < 6 ){
    nro = Math.random();
    console.log(nro);
    i = i + 1;
}


// Exercício 4
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    console.log(nro);
    i = i + 1;
}

// Exercício 5
let i = 0;
while( i < 6 ){
    nro = Math.random() * 100;
    nro = Math.floor(nro);
    if( nro%2 == 0 ){
        console.log(nro);
    }
    i = i + 1;
}


// Exercício 6
